<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="atlant.moviesapp.activity.GalleryActivity"
    android:orientation="vertical">
    <include layout="@layout/appbarlayoutclassic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/galleryTitle"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#898885"
        tools:text="Image gallery : Room (2015)"
        android:gravity="center_vertical"
        android:paddingLeft="31dp"
        android:paddingStart="31dp"
        android:id="@+id/tv_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#898885"
        tools:text="54 images"
        android:gravity="center_vertical"
        android:paddingLeft="31dp"
        android:paddingStart="31dp"
        android:background="@color/seasonsBackgroud"
        android:id="@+id/tv_image_num" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</LinearLayout>
