<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="atlant.moviesapp.activity.SettingsActivity"
    android:orientation="vertical">
    <include layout="@layout/appbarlayoutclassic" />

    <TextView
        android:text="ACCOUNT"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/textView3"
        android:textColor="@color/standardYellow"
        android:gravity="center_vertical"
        android:paddingLeft="22dp"
        android:background="@color/navDrawerBg" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:text="Name:"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:paddingLeft="22dp"
            android:textColor="@color/fadedText" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_name"
            android:layout_weight="1"
            android:textColor="@color/fadedText" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fadedText"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:text="Username"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:paddingLeft="22dp"
            android:textColor="@color/fadedText" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_username"
            android:layout_weight="1"
            android:textColor="@color/fadedText" />
    </LinearLayout>
</LinearLayout>
