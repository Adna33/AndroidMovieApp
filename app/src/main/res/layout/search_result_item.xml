<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_item"
    android:padding="10dp">

    <ImageView
        android:layout_width="54.45dp"
        android:layout_height="81.3dp"
        android:background="@color/fadedText"
        android:id="@+id/searchPoster" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/searchPoster"
        android:layout_marginLeft="5dp"
        android:id="@+id/data"
        android:layout_height="83.1dp">

        <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/result_title" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_year"
            android:textSize="12sp"
            android:textColor="@color/fadedText"
            android:layout_weight="2"
            android:gravity="center_vertical" />

        <TextView
            android:text="resultRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/fadedText"
            android:drawableLeft="@drawable/rating_icon"
            android:drawablePadding="3dp"
            android:id="@+id/result_rating"
            android:layout_weight="2"
            android:gravity="center_vertical" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:gravity="right|center_vertical"
        android:padding="10dp"
        android:src="@drawable/go_into_icon"
        android:background="@android:color/transparent"
        android:layout_height="14dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_centerInParent="false"
        android:layout_width="12dp" />


</RelativeLayout>